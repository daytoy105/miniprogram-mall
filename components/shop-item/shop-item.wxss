
/*商品列表*/
.shop_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 15rpx;
  background: #f3f3f3;
}

.shop_item {
  width: 49%;
  background: #fff;
  margin-bottom: 15rpx;
}

.shop_img {
  width: 100%;
  height: 450rpx;
}

.info_wrap {
  font-size: 22rpx;
  color: #bbb;
  padding: 20rpx 15rpx 18rpx 15rpx;
}

.price_wrap {
  margin-bottom: 6rpx;
}

.price {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}

.pre_price {
  margin-left: 10rpx;
  text-decoration: line-through;
}

.new_price {
  color: #f10180;
}

.shop_name {
  display: inline-block;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  margin: 10rpx 0;
}

.dis_type {
  color: #2eadfb;
  border: 1px solid #2eadfb;
  font-size: 18rpx;
  padding: 0 4rpx;
}
.no_data{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #bbb;
}