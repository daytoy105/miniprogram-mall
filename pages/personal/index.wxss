.user{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.name{
  margin-top: 10rpx;
  font-size: 40rpx;
  color: #01d1ff;
}
.avatar{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  border:2rpx solid #ddd;
  box-shadow: 2rpx 2rpx 2rpx 0 rgba(0, 0, 0, 0.2);
}
.upload{
  width:100%;
  height: 100%;
  position: absolute;
  left:0;
  top: 0;
}
.btn_img{
  width:200rpx;
  height: 200rpx;
  border: 2rpx solid #ddd;
  position: absolute;
  left:220rpx;
  top:180rpx;
  border-radius: 10rpx;
}
.btn_img::before{
  content: "+";
  margin-left: 50rpx;
  margin-top: 50rpx;
  font-size: 140rpx;
  color:#eee;

}
#clipArea {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  transform: translateZ(100);
}
 
.photoclip {
  position: absolute;
}

.photo-clip-mask {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: url(http://static.lhyou.com/201702/hutui_edit/images/clip_mask.png) center center/100% auto;
}

.photo-clip-area {
  position: absolute;
  width: 522rpx;
  height: 522rpx;
  background: url(http://static.lhyou.com/201702/hutui_edit/images/clip_area.png) no-repeat;
  background-size: 100%;
}

.clipBtn {
  position: fixed;
  width: 100%;
  height: 92rpx;
  top:78%;
  z-index: 10;
}

.code_cancel {
  position: absolute;
  width: 92rpx;
  height:92rpx;
  left:220rpx;
}

.code_ok {
  position: absolute;
  width: 92rpx;
  height:92rpx;
  left:400rpx;
}
 